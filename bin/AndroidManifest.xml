<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.touchscreen.touchscreenplayer"
    android:installLocation="preferExternal"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_TASKS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/player"
        android:screenOrientation="landscape"
        android:theme="@style/AppTheme" >
        <activity
            android:name="touchscreenplayer.Launcher"
            android:label="@string/launcher"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="headup.IpLauncher"
            android:label="@string/hud" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="touchscreenplayer.MusicPlayer"
            android:label="@string/player" 
            android:launchMode="singleTask"
            android:stateNotNeeded="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.HOME" />
            </intent-filter>
        </activity>
        <activity
            android:name="headup.HeadUpPlayer"
            android:label="@string/hud"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="touchscreenplayer.MusikList"
            android:label="@string/title_activity_list_view" >
        </activity>
        <activity
            android:name="touchscreenplayer.MusikKeyboard"
            android:label="@string/title_activity_list_view" >
        </activity>
        <activity
            android:name="headup.HeadUpList"
            android:label="@string/title_activity_list_view" >
        </activity>
        <activity android:name="headup.HeadUpKeyboard" >
        </activity>

        <service
            android:name="touchscreenplayer.ServerService"
            android:process=":remote" />
        <service
            android:name="headup.ClientService"
            android:process=":remote" />
    </application>

</manifest>