<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/keyboardview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    android:screenOrientation="landscape" >

    <LinearLayout
        android:id="@+id/empty2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/touchscreenview"
        android:orientation="horizontal"
        android:weightSum="1" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Task Order: "
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:visibility="invisible" />
    </LinearLayout>

    <Button
        android:id="@+id/task3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/empty2"
        android:background="@color/grey"
        android:onClick="click"
        android:text="Task 3"
        android:textSize="60sp" />

    <Button
        android:id="@+id/task2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/empty2"
        android:layout_centerHorizontal="true"
        android:background="@color/grey"
        android:onClick="click"
        android:text="Task 2"
        android:textSize="60sp" />

    <Button
        android:id="@+id/task1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/empty2"
        android:layout_margin="2dp"
        android:background="@color/grey"
        android:onClick="click"
        android:text="Task 1"
        android:textSize="60sp" />

    <Button
        android:id="@+id/buttonEmpty1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/task1"
        android:clickable="false"
        android:text="Button"
        android:textSize="60sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/task4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/buttonEmpty1"
        android:background="@color/grey"
        android:onClick="click"
        android:text="Task 4"
        android:textSize="60sp" />

    <Button
        android:id="@+id/buttonEmpty3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/task2"
        android:clickable="false"
        android:text="Button"
        android:textSize="60sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonEmpty2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/task2"
        android:layout_below="@+id/task2"
        android:clickable="false"
        android:text="Button"
        android:textSize="60sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/task5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonEmpty2"
        android:layout_below="@+id/buttonEmpty2"
        android:background="@color/grey"
        android:onClick="click"
        android:text="Task 5"
        android:textSize="60sp" />

    <Button
        android:id="@+id/buttonEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/task3"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/buttonEmpty3"
        android:background="@color/grey"
        android:onClick="click"
        android:text="Enter"
        android:textSize="60sp" />

    <LinearLayout
        android:id="@+id/touchscreenview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/name"
        android:background="@android:color/black"
        android:orientation="horizontal"
        android:weightSum="10" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task Order: "
            android:textColor="@android:color/white"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/taskorder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8.51"
            android:textColor="@android:color/white"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.64"
            android:text="HUD"
            android:textColor="@android:color/white"
            android:textSize="40sp" />

        <ToggleButton
            android:id="@+id/hud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.59"
            android:text="ToggleButton" />
    </LinearLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="ID: "
        android:textColor="@android:color/white"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/idName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/touchscreenview"
        android:layout_toRightOf="@+id/name"
        android:background="@android:color/black"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:text="15"
        android:textColor="@android:color/white"
        android:textSize="40sp" >

        <requestFocus />
    </EditText>

</RelativeLayout>